@inherits LayoutComponentBase

<PageTitle>PeerStudy</PageTitle>

<MatThemeProvider Theme="@matBlazorTheme">
    <div class="page">
        <AuthorizeView>
            <Authorized>
                <div class="sidebar">
                    <NavMenu />
                </div>
            </Authorized>
        </AuthorizeView>

        <main>
            <div class="top-row px-4">
                <AuthorizeView>
                    <NotAuthorized>
                        <a href="/register" class="ml-md-auto">Register</a>
                        <a href="/login" class="ml-md-auto">Login</a>
                    </NotAuthorized>
                    <Authorized>
                        @foreach (var menuItem in NavigationMenuService.GetMenuItems())
                        {
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="@menuItem.Href">
                                    @menuItem.Name
                                </NavLink>
                            </div>
                        }
                        <MenuUserAccount></MenuUserAccount>
                    </Authorized>
                </AuthorizeView>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</MatThemeProvider>

