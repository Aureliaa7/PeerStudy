@inherits LayoutComponentBase

<PageTitle>PeerStudy</PageTitle>

<MatThemeProvider Theme="@matBlazorTheme">
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <AuthorizeView>
                    <NotAuthorized>
                        <a href="/register" class="ml-md-auto">Register</a>
                        <a href="/login" class="ml-md-auto">Login</a>
                    </NotAuthorized>
                    <Authorized>
                         <MenuUserAccount></MenuUserAccount>
                    </Authorized>
                </AuthorizeView>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</MatThemeProvider>

