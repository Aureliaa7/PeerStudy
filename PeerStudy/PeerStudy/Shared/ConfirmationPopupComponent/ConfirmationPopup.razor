<MatDialog @bind-IsOpen="@IsOpen">
    <MatDialogTitle>@Title</MatDialogTitle>
    <MatDialogContent>
        @Message
    </MatDialogContent>
    <MatDialogActions>
        <MatButton Raised="true" OnClick="Confirm" Disabled="IsConfirmButtonDisabled">Confirm</MatButton>
        <MatButton OnClick="Cancel">Cancel</MatButton>
    </MatDialogActions>
</MatDialog>