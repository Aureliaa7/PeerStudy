@using PeerStudy.Core.Models.Courses

@page "/courses/enroll"
@attribute [Authorize(Roles="Student")]
@inherits PeerStudyComponentBase<CourseDetailsModel>


<CoursesList Courses="data"
             IsLoading="isLoading"
             CoursesNotFoundMessage="@noCoursesMessage"
             CanEnrollInCourse=true
             OnEnroll="EnrollHandler">
</CoursesList>

<MatSnackbar @bind-IsOpen="displayCreateEnrollmentMessage">
    <MatSnackbarContent>@createEnrollmentMessage</MatSnackbarContent>
</MatSnackbar>