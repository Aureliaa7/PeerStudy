<div class="container center-elements">
    @if (IsLoading)
    {
        <div>
            <MatProgressCircle Indeterminate="@IsLoading" Size="MatProgressCircleSize.Large" />
        </div>
    }
    else if (!IsLoading && !Courses.Any())
    {
        <NotFound Message="@CoursesNotFoundMessage"></NotFound>
    }
    else
    {
        <div class="courses-container">
            @foreach (var course in Courses)
            {
                <CourseCard Course="course"
                    CanEnrollInCourse="CanEnrollInCourse"
                    OnEditCourse="EditCourseHandler"
                    OnArchiveCourse="ArchiveCourseHandler"
                    OnCourseClicked="ClickedCourseHandler"
                    OnEnroll="EnrollHandler">
                </CourseCard>
            }
        </div>
    }
</div>
