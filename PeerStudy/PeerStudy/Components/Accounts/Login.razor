@page "/login"

<EditForm Model="loginModel" OnValidSubmit="LogIn">
    <DataAnnotationsValidator />
    <div class="card login-card">
        <div class="card-title">
            <h3>Login</h3>
        </div>

        <div class="card-body">
            <div>
                <MatTextField Style="@style" @bind-Value="@loginModel.Email" Label="Email" Icon="email"></MatTextField>
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>

            <div>
                <MatTextField Style="@style" @bind-Value="@loginModel.Password" Label="Password" Icon="lock" Type="password"></MatTextField>
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <div>
                <MatButton Style="@style" Raised="true" Type="submit">Log in</MatButton>
            </div>
        </div>
    </div>
</EditForm>


<Alert Color="Color.Danger" @bind-Visible="@showLoginErrorMessage">
    <AlertDescription>Invalid Credentials!</AlertDescription>
    <CloseButton />
</Alert>


