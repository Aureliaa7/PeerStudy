@using PeerStudy.Features.Q_A.Components.FlatQuestionComponent

@page "/my-questions"
@attribute [Authorize(Roles = "Student")]
@inherits PeerStudyComponentBase

<div class="page-header">
    <h3>My Questions</h3>
    <div class="ask-question-button">
        <MatButton Class="submit-button" Raised=true OnClick="AddQuestion">Ask a question</MatButton>
    </div>
</div>

<Loading IsLoading="isLoading"
         HasData="@(!isLoading && questionsModels.Any())"
         NotFoundMessage="@noQuestionsMessage">

    @foreach (var question in questionsModels)
    {
        <FlatQuestion Question="question" OnClick="HandleClickedQuestion"></FlatQuestion>
    }

</Loading>
