@using PeerStudy.Core.Enums

<div class="@(Answer.IsReadOnly ? "answer" : "")">
    <div>
        <PeerStudyTextEditor HtmlContent="@Answer.HtmlContent"
                             IsReadOnly="Answer.IsReadOnly"
                             OnSave="SaveEditorContent"
                             OnCancel="CancelEdit">
        </PeerStudyTextEditor>
    </div>

    @if (Answer.IsReadOnly)
    {
        <div class="answer-details">
            @if (Answer.AuthorId == CurrentUserId)
            {
                <div class="buttons">
                    <MatButton Icon="@MatIconNames.Edit" OnClick="Edit"></MatButton>
                    <MatButton Icon="@MatIconNames.Delete" OnClick="Delete"></MatButton>
                </div>
            }
            else
            {
                <div class="buttons">
                    <MatButton 
                        Style="@($"color: {(!CurrentUserVotedAnswer(VoteType.Upvote) ? "#C8C8C8" : "")}")"
                        Icon="@MatIconNames.Thumb_up"
                        OnClick="Upvote">@Answer.NoUpvotes
                    </MatButton>

                    <MatButton 
                        Style="@($"color: {(!CurrentUserVotedAnswer(VoteType.Downvote) ? "#C8C8C8" : "")}")" 
                        Icon="@MatIconNames.Thumb_down"
                        OnClick="Downvote">@Answer.NoDownvotes
                    </MatButton>
                </div>
            }
            <div class="author-and-date">
                @Answer.AuthorName replied @Answer.CreatedAt
            </div>
        </div>
    }
</div>
